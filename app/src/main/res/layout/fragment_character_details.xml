<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterDetailsFragment">

 <com.google.android.material.appbar.MaterialToolbar
     android:id="@+id/toolbar_characterDetails"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     />

    <ImageView
        android:id="@+id/image_characterDetails"
        android:layout_width="@dimen/avatar_big_size"
        android:layout_height="@dimen/avatar_big_size"
        android:layout_marginTop="@dimen/margin_medium"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_characterDetails"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_characterDetails_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:hint="@string/name"
        android:minHeight="48dp"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_characterDetails"
        tools:text="Juan Carlos" />

    <TextView
        android:id="@+id/label_characterDetails_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_xl"
        android:text="@string/species"
        android:textColor="@color/secondary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_characterDetails_name"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_characterDetails_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_xl"
        android:hint="Species"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/label_characterDetails_species"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_characterDetails_species"
        tools:text="Human" />

    <TextView
        android:id="@+id/label_characterDetails_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_xl"
        android:text="@string/status"
        android:textColor="@color/secondary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_characterDetails_species"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_characterDetails_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_xl"
        android:hint="Status"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/label_characterDetails_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_characterDetails_status"
        tools:text="Alive" />

    <TextView
        android:id="@+id/label_characterDetails_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_xl"
        android:text="@string/gender"
        android:textColor="@color/secondary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_characterDetails_status"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_characterDetails_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_xl"
        android:hint="Gender"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/label_characterDetails_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_characterDetails_gender"
        tools:text="Male" />

    <TextView
        android:id="@+id/label_characterDetails_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_xl"
        android:text="@string/origin"
        android:textColor="@color/secondary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_characterDetails_gender"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_characterDetails_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_xl"
        android:hint="Origin"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/label_characterDetails_origin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_characterDetails_origin"
        tools:text="Guatemala" />

    <TextView
        android:id="@+id/label_characterDetails_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_xl"
        android:text="@string/episodes"
        android:textColor="@color/secondary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_characterDetails_origin"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_characterDetails_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_xl"
        android:hint="Episodes"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/label_characterDetails_episodes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_characterDetails_episodes"
        tools:text="10" />

    <Button
        android:id="@+id/guardarDatos"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginTop="267dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_characterDetails_name"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/borrarDatos"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:text="Button"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconTint="#D50000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/actualizarDatos"
        android:layout_width="63dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        app:icon="@android:drawable/ic_popup_sync"
        app:iconTint="#2962FF"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_characterDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="@+id/toolbar_characterDetails"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />


</androidx.constraintlayout.widget.ConstraintLayout>